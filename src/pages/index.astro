---
import './src/styles/global.css';

import { problems } from '../assets/sample';
import Download from '../components/Download.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Bilevel benchmarking</title>
  </head>
  <body>
    <h1 class="text-9xl text-center mb-8">Bilevel benchmarking</h1>

    <main class="max-w-7xl mx-auto">
      <div class="grid grid-cols-13 gap-4">
        <div>Problem</div>
        <div>Citation</div>
        <div>Dataset</div>
        <div>
          Upper-level variables
          <code>n</code>
        </div>
        <div>
          Lower-level variables
          <code>m</code>
        </div>
        <div>
          Upper-level constraints
          <code>p</code>
        </div>
        <div>
          Lower-level constraints
          <code>q</code>
        </div>
        <div>Python</div>
        <div>MatLab</div>
        <div>Julia</div>
        <div>AMPL</div>
        <div>GAMS</div>
        <div>PDF</div>
      </div>

      {
        problems.map((problem) => (
          <div class="grid grid-cols-13 gap-4">
            <div>{problem.name}</div>
            <div>
              <a href={problem.citation.href}>{problem.citation.title}</a>
            </div>
            <div>-</div>
            <div>
              <code>{problem.upperLevelVariables}</code>
            </div>
            <div>
              <code>{problem.lowerLevelVariables}</code>
            </div>
            <div>
              <code>{problem.upperLevelConstraints}</code>
            </div>
            <div>
              <code>{problem.lowerLevelConstraints}</code>
            </div>
            <Download link="https://picsum.photos/536/354" />
            <Download link="https://picsum.photos/536/354" />
            <Download link="https://picsum.photos/536/354" />
            <Download link="https://picsum.photos/536/354" />
            <Download link="https://picsum.photos/536/354" />
            <Download link="https://picsum.photos/536/354" />
          </div>
        ))
      }
    </main>
  </body>
</html>
