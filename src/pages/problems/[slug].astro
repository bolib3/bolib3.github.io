---
import { problems } from '@/lib/data';
import RootLayout from '../../layouts/RootLayout.astro';
import { slugify, stringifyInlineArrays } from '@/lib/utils';
import PdfPreview from '@/components/PdfPreview.astro';
import { Code } from 'astro:components';
import {
  Breadcrumb,
  BreadcrumbItem,
  BreadcrumbLink,
  BreadcrumbList,
  BreadcrumbPage,
  BreadcrumbSeparator,
} from '@/components/ui/breadcrumb';
import ProblemPreview from '@/components/problems/preview/ProblemPreview.astro';
import CategoryTag from '@/components/CategoryTag.vue';

export function getStaticPaths() {
  return problems.map((problem) => ({
    params: {
      slug: slugify(problem.name),
    },
  }));
}

const { slug } = Astro.params;

const problem = problems.find((problem) => slugify(problem.name) === slug)!;
---

<RootLayout>
  <div class="flex flex-wrap items-center justify-between gap-4">
    <Breadcrumb>
      <BreadcrumbList>
        <BreadcrumbItem>
          <!-- @ts-ignore -->
          <BreadcrumbLink href="/problems"> Problems </BreadcrumbLink>
        </BreadcrumbItem>
        <BreadcrumbSeparator />
        <BreadcrumbItem>
          <BreadcrumbPage>{problem.name}</BreadcrumbPage>
        </BreadcrumbItem>
      </BreadcrumbList>
    </Breadcrumb>

    <CategoryTag category={problem.category} />
  </div>

  <h1 class="mt-4">{problem.name}</h1>

  <div class="grid gap-4 md:grid-cols-2">
    <div class="overflow-x-auto">
      <div class="justify-between pr-8 md:flex">
        <div>
          <h2 class="mt-12 text-2xl font-bold">Dimension</h2>

          <p class="mt-6 max-w-3xl leading-7">
            <Code
              code={stringifyInlineArrays(problem.dimension, 2)}
              lang="json"
              themes={{ light: 'github-light-default', dark: 'github-dark-default' }}
              defaultColor="light"
            />
          </p>
        </div>

        {
          problem.datasets && (
            <div>
              <h2 class="mt-12 text-2xl font-bold">Datasets</h2>
              <ul class="mt-6 list-disc pl-6">
                {problem.datasets.map((dataset) => (
                  <li>
                    <code>{dataset.name}</code>
                  </li>
                ))}
              </ul>
            </div>
          )
        }
      </div>

      <h2 class="mt-12 text-2xl font-bold">Solution</h2>

      <p class="mt-6 max-w-3xl leading-7">
        <Code
          code={stringifyInlineArrays(problem.solution, 2)}
          lang="json"
          themes={{ light: 'github-light-default', dark: 'github-dark-default' }}
          defaultColor="light"
        />
      </p>

      <div class="mt-12">
        <PdfPreview problem={problem} />
      </div>
    </div>

    <div class="sticky top-20 overflow-x-auto md:max-h-[calc(100vh-10rem)]">
      <ProblemPreview problem={problem} />
    </div>
  </div>
</RootLayout>
