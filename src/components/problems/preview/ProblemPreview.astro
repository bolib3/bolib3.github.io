---
import CopyCode from '@/components/CopyCode.astro';
import LanguageTabs from './LanguageTabs.vue';
import type { Problem } from '@/types';
import fs from 'fs';
import { BOLIB_PATH } from '@/lib/loader';

interface Props {
  problem: Problem;
}

const { problem } = Astro.props;

const python = fs.readFileSync(`${BOLIB_PATH}/python/${problem.name}.py`, 'utf-8');
const matlab = fs.readFileSync(`${BOLIB_PATH}/matlab/${problem.name}.m`, 'utf-8');
const gams = fs.readFileSync(`${BOLIB_PATH}/gams/${problem.name}.gms`, 'utf-8');
const latex = fs.readFileSync(`${BOLIB_PATH}/latex/${problem.name}.tex`, 'utf-8');
---

<LanguageTabs client:only>
  <CopyCode
    slot="python"
    code={python}
    lang="python"
    downloadPath={`/problems/python/${problem.name}.py`}
  />
  <CopyCode
    slot="matlab"
    code={matlab}
    lang="matlab"
    downloadPath={`/problems/matlab/${problem.name}.m`}
  />
  <!-- Note that gams is not supported by shiki so we're using python for now -->
  <CopyCode
    slot="gams"
    code={gams}
    lang="python"
    downloadPath={`/problems/gams/${problem.name}.gms`}
  />
  <CopyCode
    slot="latex"
    code={latex}
    lang="latex"
    downloadPath={`/problems/latex/${problem.name}.tex`}
  />
</LanguageTabs>
